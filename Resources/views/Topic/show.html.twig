{% extends 'DarlesForumBundle::layout.html.twig' %}
{% block title %}{{ topic.subject }}{% endblock %}
{% block content %}
    <div class="forum forum_topic">

        <ul class="crumbs">
            <li><a href="{{ path('darles_forum_index') }}">Forum</a></li>
            <li><a href="{{ forum_urlForCategory(topic.category) }}">{{ topic.category.name }}</a></li>
            <li>{{ topic.subject }}</li>
        </ul>

        <div class="main topic">
            <h2>{{ topic.subject }}</h2>
            {% include 'DarlesForumBundle:Post:list.html.twig' with {'posts': posts} %}
        </div>

        <div class="navigation">
            {{ knp_pagination_render(posts) }}
        </div>

        <div class="side menu">
            <a href="{{ forum_urlForTopicReply(topic) }}">Add a New Reply</a>
        </div>

    </div>

{% endblock %}
