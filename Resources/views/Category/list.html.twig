<table class="table">
    <tr>
        <th>{{ 'forum.topic.title'|trans }}</th>
        <th>{{ 'forum.topic.num_topics'|trans }}</th>
        <th>{{ 'forum.topic.num_posts'|trans }}</th>
    </tr>
    {% for category in categories %}
        <tr>
            <td><a href="{{ forum_urlForCategory(category) }}">{{ category.name }}</a></td>
            <td>{{ category.numTopics }}</td>
            <td>{{ category.numPosts }}<br/></td>
        </tr>
    {% endfor %}
</table>

<div class="navigation">
    {{ knp_pagination_render(categories) }}
</div>
