<table class="forum_categories_list">
    <tr>
        <th>{{ 'forum.topic.title'|trans }}</th>
        <th>{{ 'forum.topic.count'|trans }}</th>
        <th>{{ 'forum.topic.last_post'|trans }}</th>
        <th>{{ 'forum.topic.poster'|trans }}</th>
    </tr>
    {% for category in categories %}
        <tr>
            <td><a href="{{ forum_urlForCategory(category) }}">{{ category.name }}</a></td>
            <td>{{ category.numTopics }}</td>
            <td>{{ category.numTopics }} ONLINE<br/></td>
            <td>{{ category.numTopics }} ONLINE</td>
        </tr>
    {% endfor %}
</table>
